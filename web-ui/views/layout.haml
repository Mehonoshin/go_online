!!! 5
%html(lang="en")
  %head
    %title
    %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon" }
    %link{ rel: 'stylesheet', href: '/assets/application.css', type: "text/css" }
    %script{ src: '/assets/application.js', type: "text/javascript" }

  %body{"data-host" => @request.host}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{:href => "/", :class => "brand"}= "CS Twi"
          .nav-collapse
            %ul.nav
              %li{:class => @request.path == "/" ? "active" : ""}
                %a{:href => "/"}= "Твиты"
              %li{:class => @request.path == "/best" ? "active" : ""}
                %a{:href => "/best"}= "Лучшее"
              %li{:class => @request.path == "/twiple" ? "active" : ""}
                %a{:href => "/twiple", :class => ""}= "Люди"
              %li
                %a{:href => "http://twitter.com/CSFTwi", :target => "blank", :class => ""}= "Наш твиттер"
              %li{:class => @request.path == "/about" ? "active" : ""}
                %a{:href => "/about", :class => ""}= "О проекте"
    .container
      - unless @message.nil?
        .hero-unit
          = @message
      .row
        .span12
          = yield
